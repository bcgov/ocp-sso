{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "Python",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A suffix appended to all objects",
      "required": true,
      "value": "sso72-bcgov"
    },
    {
      "name": "VERSION",
      "required": true,
      "value": "1.1-9-1"
    },
    {
      "name": "THEME_SOURCE_REPOSITORY_URL",
      "required": true,
      "value": "https://github.com/bcgov/bcgov-sso-theme.git"
    },
    {
      "name": "THEME_SOURCE_REPOSITORY_REF",
      "required": false,
      "value": "add-docker-file"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "sso72-openshift",
        "creationTimestamp": null,
        "annotations": {},
        "labels": {
          "shared": "true"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags":[
          {
            "name": "1.1-9",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/redhat-sso-7/sso72-openshift:1.1-9"
            },
            "importPolicy": {},
            "referencePolicy": {
              "type": "Source"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "annotations": null,
        "labels": {
          "shared": "true"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": { },
        "annotations": { }
      },
      "spec": {
        "completionDeadlineSeconds": 1440,
        "successfulBuildsHistoryLimit": 3,
        "failedBuildsHistoryLimit": 3,
        "triggers": [
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "SerialLatestOnly",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${THEME_SOURCE_REPOSITORY_URL}",
            "ref": "${THEME_SOURCE_REPOSITORY_REF}"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "sso72-openshift:1.1-9"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${VERSION}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "500m",
            "memory": "2Gi"
          },
          "requests": {
            "cpu": "250m",
            "memory": "1Gi"
          }
        },
        "postCommit": {},
        "nodeSelector": null
      }
    }
  ]
}
